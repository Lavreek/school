{% extends 'base.html.twig' %}

{% block title %}{{ templates['title'] }}{% endblock %}

{% block body %}
    <form id="{{ templates['form_class'] }}-create" style="margin: auto;">
        <div class="mb-3">
            <h5>Создание нового пользователя</h5>
            <div style="margin-top: 1em;">
                <label class="form-label" for="_email">Почта пользователя</label>
                <input class="form-control" id="_email" name="_email" placeholder="Email для пользователя">
            </div>
            <div style="margin-top: 1em;">
                <label for="_role_select" class="form-label">Роль</label>
                <select class="form-select" id="_role_select" name="_role_select">
                    <option selected disabled value="">Не определена</option>
                    <option value="admin">Администратор</option>
                    <option value="teacher">Учитель</option>
                    <option value=student">Ученик</option>
                </select>
            </div>
            <div style="margin-top: 1em;">
                <label class="form-label" for="_password">Пароль нового пользователя</label>
                <input class="form-control" name="_password" id="_password" value="{{ templates['password'] }}" readonly>
            </div>
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-primary {{ templates['form_class'] }}-button-create">Создать</button>
        </div>
        <div class="messages-collapse collapse" id="messages-collapse">
            <div class="display-messages py-4"></div>
        </div>
    </form>
{% endblock %}
