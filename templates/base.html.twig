<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body style="display: flex; flex-direction: column; justify-content: space-between;">
        {{ include('blocks/header.html.twig') }}
        <div style="display: flex; width: 100%; height: 100%;">
            {% if params['user'] is not null and params['user'].getRoles() != 'USER_GUEST' %}
                {{ include('blocks/sidebar.html.twig') }}
            {% endif %}
            {% block body %}{% endblock %}
        </div>
        {{ include('blocks/footer.html.twig') }}
    </body>
</html>
