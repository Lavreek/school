{% extends 'base.html.twig' %}

{% block title %}Hello DepartmentController!{% endblock %}

{% block body %}
    <div style="margin: auto;">
        <div style="width: 100%; margin-bottom: 2em;">
            <h5>Создание кафедры в факультете: {{ faculty.getTitle() }}</h5>
        </div>
        <form id="department-create" style="margin: auto;">
            <div class="mb-3">
                <label for="_title" class="form-label">Название кафедры</label>
                <input type="text" class="form-control" name="_title" id="title" aria-describedby="titleHelp">
                <input type="hidden" name="_user_id" value="{{ params['user'].getId() }}">
                <input type="hidden" name="_faculty_id" value="{{ faculty.getId() }}">
            </div>
            <div class="text-center">
                <button type="button" class="btn btn-primary department-button-create">Создать</button>
            </div>
            <div class="messages-collapse collapse" id="messages-collapse">
                <div class="display-messages py-4"></div>
            </div>
        </form>
    </div>
{% endblock %}
