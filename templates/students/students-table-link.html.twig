{% extends 'base.html.twig' %}

{% block title %}{{ templates['title'] }}{% endblock %}

{% block body %}
    <div class="container" style="width: 100%; display: flex; flex-direction: column;">
        <div style="display: inherit; justify-content: space-between;">
            <h5>{{ templates['title'] }}</h5>
        </div>
        <div>
            {% if templates['table']|length == 0 %}
                <p style="margin-top: 1em;">Нет ни одной связанной записи.</p>

            {% else %}
                <div class="container" style="margin-top: 1em;">
                    {% for i in templates['table'] %}
                        <div class="card" style="margin: 1em 0;">
                            <div class="card-body">
                                <div style="display: flex; justify-content: space-between;">
                                    <div>
                                        {% if i.getEmail() is defined %}
                                            <p style="margin: 0;">{{ i.getEmail() }}</p>
                                        {% endif %}
                                    </div>
                                    <div>
                                        <a href="{{ templates['link_path'] }}{{ i.getId() }}" type="button" class="btn btn-primary">Связать</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
